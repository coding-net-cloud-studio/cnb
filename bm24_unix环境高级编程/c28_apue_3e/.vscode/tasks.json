{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ 生成活动文件",
            "command": "gcc",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务."
        },
        {
            "type": "shell",
            "label": "t12_构建_apue_3rd_学习笔记",
            "command": "make",
            "args": [
                "-f",
                "${workspaceFolder}/Makefile",
                "build"
            ],
            "options": {
            }
        },
    ],
    "version": "2.0.0"
}
